{% trans_default_domain 'alerts' %}

<template id="confirmation">
	<swal-title>
		{{ confirmationTitle is defined ? confirmationTitle : 'message.confirmationTitle' | trans }}
	</swal-title>
	<swal-icon type="question" color="grey"></swal-icon>
	<swal-html>{{ confirmationText is defined ? confirmationText : 'message.deletionConfirmationText' | trans }}</swal-html>
	<swal-button type="confirm">
		{{ 'btn.accept' | trans }}
	</swal-button>
	<swal-button type="cancel">
		{{ 'btn.cancel' | trans }}
	</swal-button>
	<swal-param name="allowEscapeKey" value="false"/>
	<swal-param name="customClass" value='{ "popup": "my-popup" }'/>
</template>

<template id="error">
	<swal-title>
		{{ 'message.error' | trans }}
	</swal-title>
	<swal-icon type="error" color="red"></swal-icon>
   <swal-html>Loading...</swal-html>
	<swal-button type="confirm">
		{{ 'btn.ok' | trans }}
	</swal-button>
	<swal-param name="allowEscapeKey" value="true"/>
</template>